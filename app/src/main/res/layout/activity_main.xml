<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/screenMarg">


    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/toppings"
        android:textAllCaps="true" />

    <CheckBox
        android:id="@+id/chk_cream"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/cream"/>

    <CheckBox
        android:id="@+id/chk_choc"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/choc"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_increase"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:text="@string/inc"
            />

<TextView
    android:id="@+id/tv_coffeeCount"
    android:layout_height="48dp"
    android:layout_width="wrap_content"
    android:layout_marginLeft="@dimen/smallMarg"
    android:layout_marginRight="@dimen/smallMarg"

    android:text="0"/>

        <Button
            android:id="@+id/btn_decrease"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:text="@string/decrease"
            />



        </LinearLayout>

    <Button
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order"
        android:textAllCaps="true" />

</LinearLayout>
